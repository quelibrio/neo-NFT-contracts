{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}